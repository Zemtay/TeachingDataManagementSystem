<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.AiChatHistoryMapper">
    <select id="selectByUserId" parameterType="Long" resultType="com.ruoyi.system.domain.AiChatHistory">
        SELECT * FROM ai_chat_history WHERE user_id = #{userId}
    </select>

    <insert id="insertOrUpdate" parameterType="com.ruoyi.system.domain.AiChatHistory">
        INSERT INTO ai_chat_history (user_id, messages)
        VALUES (#{userId}, #{messages})
            ON DUPLICATE KEY UPDATE messages = #{messages}, update_time = NOW()
    </insert>

    <delete id="deleteByUserId" parameterType="Long">
        DELETE FROM ai_chat_history WHERE user_id = #{userId}
    </delete>

</mapper>
